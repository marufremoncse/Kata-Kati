<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/background1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_p1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Player 1: 0"
            android:textSize="80px"
            android:textColor="#4d88ff"
            android:freezesText="true"/>
        <TextView
            android:id="@+id/text_view_p2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/text_view_p1"
            android:text="Player 2: 0"
            android:textSize="80px"
            android:textColor="#009933"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#e6eeff"
            android:background="@drawable/reset_button"
            android:text="reset"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="75sp"
            android:textColor="#ff1a1a"
            android:background="@drawable/button_right_bottom"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="75sp"
            android:textColor="#ff66b3"
            android:background="@drawable/button_right_bottom"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="75sp"
            android:textColor="#3366ff"
            android:background="@drawable/bottom"
            android:freezesText="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="75sp"
            android:textColor="#ffff00"
            android:background="@drawable/button_right_bottom"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="75sp"
            android:textColor="#993300"
            android:background="@drawable/button_right_bottom"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="75sp"
            android:textColor="#ff6600"
            android:background="@drawable/bottom"
            android:freezesText="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="75sp"
            android:textColor="#0000e6"
            android:background="@drawable/button_right"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="75sp"
            android:textColor="#f2f2f2"
            android:background="@drawable/button_right"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="75sp"
            android:textColor="#267326"
            android:background="@android:color/transparent"
            
            android:freezesText="true"/>
    </LinearLayout>



</LinearLayout>